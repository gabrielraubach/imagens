<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="@color/white">

    <ImageView
        android:id="@+id/imgFoto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"

        app:srcCompat="@drawable/sus"
        />

    <TextView
        android:id="@+id/txtInformacao"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imgFoto"

        android:text="Foto 1"
        android:textSize="30dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btFoto1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgFoto"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:width="200dp"

        android:backgroundTint="@color/teal_200"
        android:padding="10dp"

        android:text="Exibir foto 1"

        android:textColor="@color/black" />

    <Button
        android:id="@+id/btFoto2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btFoto1"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="200dp"

        android:backgroundTint="@color/purple_200"
        android:padding="10dp"

        android:text="Exibir foto 2"

        android:textColor="@color/black" />
</RelativeLayout>